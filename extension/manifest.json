{
  "name": "CodeBindle",
  "description": "A Chrome Extension for grabbing code snippets from a web page using the keyboard",
  "version": "0.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Copy code"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      // "css": ["mystyles.css"],
      "js": [
        "libs/jquery-2.1.4.min.js", 
        "libs/jquery.hotkeys.js",
        "content.js"]
    }
  ],
  "manifest_version": 2
}
